{% extends 'layout.html.twig' %}

{% block body %}
    <div class="container">
        <div class="page-header">
            <h1>Ma checklist</h1>
        </div>
        <div class="progress">
            <div class="progress-bar progress-bar-striped massive-font" role="progressbar"
                 style="width: {{ percent }}%"
                 aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6 col-md-12 col-sm-12 col-xs-12">
                <div class="card">
                    <div class="card-header">
                        <h3>Ma liste de choses à faire</h3>
                    </div>
                    <div class="card-body">
                        {{ form_start(form) }}
                        <div class="form-group">

                            {% for category, choices in form.children.checklistItems.vars.choices %}
                                {% if category == 'todo' %}
                                    {% for key, choice in choices %}
                                        {{ form_widget(form.checklistItems[key]) }}
                                    {% endfor %}
                                {% endif %}
                            {% endfor %}

                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-6 col-md-12 col-sm-12 col-xs-12">
                <div class="card">
                    <div class="card-header">
                        <h3>Mes documents</h3>
                    </div>
                    <div class="card-body">
                        <div class="form-group">

                            {% for category, choices in form.children.checklistItems.vars.choices %}
                                {% if category == 'doc' %}
                                    {% for key, choice in choices %}
                                        {{ form_widget(form.checklistItems[key]) }}
                                    {% endfor %}
                                {% endif %}
                            {% endfor %}


                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row justify-content-end">
            <div class="col-lg-2 col-md-6 col-sm-6 col-xs-6">
            <button class="btn btn-primary">Mettre à jour</button>
            {{ form_end(form) }}
            </div>
        </div>
    </div>

{% endblock %}
