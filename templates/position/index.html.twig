{% extends 'layout.html.twig' %}

{% block title %}Gestion des métiers{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="card w-100 m-auto">
                    <div class="card-header text-center">
                        <h1>Tous les métiers</h1>
                    </div>
                    <div class="d-flex justify-content-md-start ml-4 mt-3">
                        <a href="{{ path('position_new') }}" class="btn btn-primary mb-3">Ajouter un métier</a>
                    </div>
                    <table class="table">
                        <thead>
                        <tr>
                            <th>Name</th>
                            <th>Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for position in positions %}
                            <tr>
                                <td>{{ position.name }}</td>
                                <td>
                                    <a href="{{ path('position_show', {'id': position.id}) }}">voir</a>
                                    <a href="{{ path('position_edit', {'id': position.id}) }}">modifier</a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="3">no records found</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
