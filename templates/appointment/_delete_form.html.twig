<form method="post" action="{{ path('appointment_delete', {'id': appointment.id}) }}"
      onsubmit="return confirm('La suppression de cet élément est définitive, êtes-vous sûr(e)?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ appointment.id) }}">
    <button class="btn btn-primary">Supprimer</button>
</form>
