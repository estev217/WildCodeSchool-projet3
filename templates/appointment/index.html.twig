{% extends 'layout.html.twig' %}

{% block title %}Appointment index{% endblock %}

{% block body %}
    <h1>Appointment index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Collaborateur</th>
                <th>Organisateur</th>
                <th>Date</th>
                <th>CreatedAt</th>
                <th>UpdatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for appointment in appointments %}
            <tr>
                <td>{{ appointment.id }}</td>
                <td>{{ appointment.user.firstname }} {{ appointment.user.lastname }}</td>
                <td>{{ appointment.partner.firstname }} {{ appointment.partner.lastname }}</td>
                <td>{{ appointment.date ? appointment.date|date('d/m/Y') : '' }}</td>
                <td>{{ appointment.createdAt ? appointment.createdAt|date('d/m/Y') : '' }}</td>
                <td>{{ appointment.updatedAt ? appointment.updatedAt|date('d/m/Y') : '' }}</td>
                <td>
                    <a href="{{ path('appointment_show', {'id': appointment.id}) }}">show</a>
                    <a href="{{ path('appointment_edit', {'id': appointment.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('appointment_new') }}">Create new</a>
{% endblock %}
