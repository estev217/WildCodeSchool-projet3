{% extends 'layout.html.twig' %}

{% block title %}Appointment index{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header text-center">
                        <h1>Planning des entretiens</h1>
                    <div class="card-body">
                        <table class="table table-striped">
                            <caption class="agenda"><a href="{{ path('appointment_new') }}"><i class="far fa-calendar-check fa-lg"></i> Planifier un rendez-vous</a></caption>
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Collaborateur</th>
                                    <th>Organisateur</th>
                                    <th>Date RDV</th>
                                    <th>planifié le</th>
                                    <th>Modifié le</th>
                                    <th>actions</th>
                                </tr>
                            </thead>
                            <tbody>
                            {% for appointment in appointments %}
                                <tr>
                                    <td>{{ appointment.id }}</td>
                                    <td>{{ appointment.user.firstname }} {{ appointment.user.lastname }}</td>
                                    <td>{{ appointment.partner.firstname }} {{ appointment.partner.lastname }}</td>
                                    <td>{{ appointment.date ? appointment.date|date('d/m/Y H:i') : '' }}</td>
                                    <td>{{ appointment.createdAt ? appointment.createdAt|date('d/m/Y') : '' }}</td>
                                    <td>{{ appointment.updatedAt ? appointment.updatedAt|date('d/m/Y') : '' }}</td>
                                    <td>
                                        <a href="{{ path('appointment_edit', {'id': appointment.id}) }}">Modifier</a>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="5">no records found</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
