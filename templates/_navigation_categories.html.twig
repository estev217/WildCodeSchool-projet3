<div>
    <ul class="nav flex-column mb-0">
        {% for category in categories %}
            {% if category.name == 'Checklist manager' %}
                {% if is_granted('ROLE_MANAGER') %}
                    <li class="nav-item">
                        <a href="{{ path('info', {'category': category.id }) }}" class="nav-link">
                            <i class="fas fa-cubes mr-3 fa-fw"></i>
                            {{ category.name }}
                        </a>
                    </li>
                {% endif %}
            {% else %}
                <li class="nav-item">
                    <a href="{{ path('info', {'category': category.id }) }}" class="nav-link">
                        <i class="fas fa-cubes mr-3 fa-fw"></i>
                        {{ category.name }}
                    </a>
                </li>
            {% endif %}
        {% endfor %}
    </ul>
</div>
