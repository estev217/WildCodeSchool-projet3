{% extends 'layout.html.twig' %}

{% block title %}Liste des utilisateurs{% endblock %}

{% block body %}

    <div class="container">
        <div class="row">
            <div class="col-12 mb-5">
                <div class="card w-100 m-auto">
                    <div class="card-header text-center">
                        <h1>Liste des utilisateurs</h1>
                    </div>
                    <div>
                        <a class="btn btn-primary ml-3" href="{{ path('user_new') }}">Créer un nouvel utilisateur</a>
                    </div>
                        <table class="table">
                            <thead>
                                <tr class="text-center">
                                    <th>Prénom</th>
                                    <th>Nom</th>
                                    <th>Rôle</th>
                                    <th>Email</th>
                                    <th>Téléphone</th>
                                    <th>Date d'entrée</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                            {% for user in users %}
                                <tr class="text-center">
                                    <td class="align-middle">{{ user.firstname }}</td>
                                    <td class="align-middle">{{ user.lastname }}</td>
                                    <td class="align-middle">{{ user.role.name }}</td>
                                    <td class="align-middle">{{ user.email }}</td>
                                    <td class="align-middle">{{ user.telephone }}</td>
                                    <td class="align-middle">{{ user.startDate ? user.startDate|date ("d/m/Y") : '' }}</td>
                                    <td class="align-middle">
                                        <a class="text-decoration-none" href="{{ path('user_show', {'id': user.id}) }}">Voir</a>
                                        <a class="text-decoration-none" href="{{ path('user_edit', {'id': user.id}) }}">Modifier</a>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="13">Aucun enregistrement</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>

                </div>
            </div>
        </div>
    </div>

{% endblock %}
