{% extends 'layout.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <div class="container">
    <h1>L'index des utilisateurs</h1>

    <table class="table">
        <thead>
            <tr class="text-white">
                <th>Id</th>
                <th>Email</th>
                <th>Prénom</th>
                <th>Nom</th>
                <th>Mentor</th>
                <th>Référent</th>
                <th>Date d'entrée</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr class="text-white">
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.firstname }}</td>
                <td>{{ user.lastname }}</td>
                <td>{{ user.mentor }}</td>
                <td>{{ user.referent }}</td>
                <td>{{ user.startDate ? user.startDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('user_show', {'id': user.id}) }}">Voir</a>
                    <a href="{{ path('user_edit', {'id': user.id}) }}">Éditer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="13">aucun enregistrement</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('user_new') }}">Créer</a>
    </div>
{% endblock %}
