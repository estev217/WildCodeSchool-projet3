{% extends 'layout.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <div class="container">
    <h1>Utilisateur</h1>
    <table class="table text-white">
        <tbody>

            <tr>
                <th>Prénom</th>
                <td>{{ user.firstname }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ user.lastname }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Rôles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Mot de passe</th>
                <td>{{ user.password }}</td>
            </tr>

            <tr>
                <th>Image</th>
                <td>{{ user.picture }}</td>
            </tr>
            <tr>
                <th>Mentor</th>
                <td>{{ user.mentor }}</td>
            </tr>
            <tr>
                <th>Référent</th>
                <td>{{ user.referent }}</td>
            </tr>
            <tr>
                <th>Date d'entrée</th>
                <td>{{ user.startDate ? user.startDate|date ("d/m/Y") : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('user_index') }}">Retour à la liste</a>

    <a class="ml-3" href="{{ path('user_edit', {'id': user.id}) }}">Modifier</a>

    {{ include('user/_delete_form.html.twig') }}
    </div>
{% endblock %}
