{% extends 'layout.html.twig' %}

{% block title %}Content index{% endblock %}

{% block body %}
    <div class="container">
        <h1>Tous les contenus</h1>

        <a href="{{ path('content_new') }}" class="btn btn-primary mb-3">Créer un nouveau contenu</a>

        <table class="table">
            <thead>
            <tr>
                <th>Titre</th>
                <th>Crée le</th>
                <th>Crée par</th>
                <th>Mis à jour le</th>
                <th>Voir</th>
                <th>Modifier</th>
            </tr>
            </thead>
            <tbody>
            {% for content in contents %}
                <tr>
                    <td>{{ content.title }}</td>
                    <td>{{ content.createdAt ? content.createdAt|date('d/m/Y') : '' }}</td>
                    <td>{{ content.user.firstname}} {{ content.user.lastname}}</td>
                    <td>{{ content.updatedAt ? content.updatedAt|date('d/m/Y') : '' }}</td>
                    <td>
                        <a href="{{ path('content_show', {'id': content.id}) }}">Voir</a>
                    </td>
                    <td>
                        <a href="{{ path('content_edit', {'id': content.id}) }}">Modifier</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
