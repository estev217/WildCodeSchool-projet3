{% extends 'layout.html.twig' %}

{% block title %}Content{% endblock %}

{% block body %}
    <div class="container">
    <h1>Créer un contenu</h1>

    <table class="table text-white">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ content.id }}</td>
            </tr>
            <tr>
                <th>Contenu</th>
                <td>{{ content.content }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ content.createdAt ? content.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ content.updatedAt ? content.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('content_index') }}">Retour à la liste</a>

    <a href="{{ path('content_edit', {'id': content.id}) }}">Éditer</a>

    {{ include('content/_delete_form.html.twig') }}
    </div>
{% endblock %}
