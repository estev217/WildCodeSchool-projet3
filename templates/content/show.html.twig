{% extends 'layout.html.twig' %}

{% block title %}Content{% endblock %}

{% block body %}
    <div class="container">
        <h1>Contenu</h1>

        <table class="table">
            <tbody>
            <tr>
                <th>Content</th>
                <td>{{ content.content|raw }}</td>
            </tr>
            <tr>
                <th>Crée le</th>
                <td>{{ content.createdAt ? content.createdAt|date('d/m/Y') : '' }}</td>
            </tr>
            <tr>
                <th>Crée par</th>
                <td>{{ content.user.firstname }} {{ content.user.lastname }}</td>
            </tr>
            <tr>
                <th>Mis à jour le</th>
                <td>{{ content.updatedAt ? content.updatedAt|date('d/m/Y') : '' }}</td>
            </tr>
            </tbody>
        </table>

        <a href="{{ path('content_index') }}" class="btn btn-primary mb-3">Retour à la liste</a>

        <a href="{{ path('content_edit', {'id': content.id}) }}" class="btn btn-primary mb-3">Modifier</a>

        {{ include('content/_delete_form.html.twig') }}
    </div>
{% endblock %}
