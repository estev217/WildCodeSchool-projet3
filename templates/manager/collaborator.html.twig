{% extends 'layout.html.twig' %}

{% block body %}

        <div class="row">
            <div class="collab-list">
                <div class="card">
                    <div class="card-header text-center">
                        <h3>Mes collaborateurs</h3>
                    </div>
                    <div class="card-body">
                        <table class="table table-striped collaborators">
                            <thead>
                            <tr>
                                <th scope="col" class="col-1 text-uppercase text-center">Nom</th>
                                <th scope="col" class="col-1 text-uppercase text-center not-mobile">Prénom</th>
                                <th scope="col" class="col-3 text-uppercase text-center desktop-xl">Mail</th>
                                <th scope="col" class="col-3 text-uppercase text-center desktop-l">Fonction</th>
                                <th scope="col" class="col-3 text-uppercase text-center not-under-mobile">Résidence</th>
                                <th scope="col" class="col-1 text-uppercase text-center"></th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for collaborator in collaborators %}
                                <tr>
                                    <td class="text-center align-middle">{{ collaborator.lastname }}
                                            <p class="not-upper-mobile">{{ collaborator.firstname }}</p></td>
                                    <td class="text-center align-middle not-mobile">{{ collaborator.firstname }}</td>
                                    <td class="text-center align-middle desktop-xl">{{ collaborator.email }}</td>
                                    <td class="text-center align-middle desktop-l">{{ collaborator.position.name }}</td>
                                    <td class="text-center align-middle not-under-mobile">{{ collaborator.residence.city }}</td>
                                    <td class="text-center align-middle">
                                        <a href="{{ path('profile', {'user': collaborator.id}) }}"><i class="fas fa-arrow-circle-right"></i></a>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="3">Vous n'avez pas de collaborateur.</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </div>

{% endblock %}
