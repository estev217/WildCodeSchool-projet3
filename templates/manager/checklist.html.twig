{% extends 'layout.html.twig' %}

{% block body %}
    <div class="container mb-5">
        <div class="col-lg-3 col-md-12 col-sm-12 col-xs-12 mb-3">
            <div><a href="{{ path('manager_show') }}">Retour à la liste</a></div>
        </div>
        <div class="row">
            <div class="col-lg-6 col-md-12 col-sm-12 col-xs-12">
                <div class="card">
                    <div class="card-header">
                        <h3>{{ collaborator.firstname }} {{ collaborator.lastname }} doit :</h3>
                    </div>
                    <div class="card-body">
                        {{ form_start(formTodo) }}
                        <div class="form-group">
                            {{ form_widget(formTodo.checklistItems) }}
                        </div>
                        {{ form_end(formTodo) }}
                    </div>
                </div>
            </div>

            <div class="col-lg-6 col-md-12 col-sm-12 col-xs-12">
                <div class="card">
                    <div class="card-header">
                        <h3>{{ collaborator.firstname }} {{ collaborator.lastname }} a reçu :</h3>
                    </div>
                    <div class="card-body">
                        {{ form_start(formDoc) }}
                        <div class="form-group">
                            {{ form_widget(formDoc.checklistItems, { disabled: 'disabled' }) }}
                        </div>
                        {{ form_end(formDoc) }}
                    </div>
                </div>
            </div>
        </div>
        </div>
    </div>
{% endblock %}
