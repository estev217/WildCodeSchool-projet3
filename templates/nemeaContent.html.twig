{% extends 'layout.html.twig' %}

{% block body %}
    <div class="container-fluid d-flex flex-column">
        <div class="page-header">
            <h1 class="ml-5">Information</h1>
            <div class="row">
                {% for content in contents %}
                    <div class="col-12 col-lg-6">
                        <div class="card">
                            <h5 class="card-header font-weight-bold text-uppercase text-center py-4 mb-0">{{ content.title }}</h5>
                            <div class="card-body">
                                {{ content.content|raw }}
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
        <div class="pagination align-self-end mr-4">
            {{ knp_pagination_render(contents) }}
        </div>
    </div>
{% endblock %}

