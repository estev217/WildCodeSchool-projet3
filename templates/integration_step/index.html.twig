{% extends 'layout.html.twig' %}

{% block title %}Gestion du parcours d'intégration{% endblock %}

{% block body %}

    <div class="container">
        <div class="row">
            <div class="col-12 mb-5">
                <div class="card w-100 m-auto">
                    <div class="card-header text-center">
                        <h1>Gestion des étapes du parcours d'intégration</h1>
                    </div>
                    <div class="text-center my-2">
                        <a class="btn btn-primary" href="{{ path('integration_step_new') }}">Ajouter une étape</a>
                    </div>

                    <table class="table">
                        <thead>
                            <tr>
                                <th>Position</th>
                                <th>Nom</th>
                                <th>Description</th>
                                <th class="text-center">Durée</th>
                                <th class="text-center">Icône</th>
                                <th class="text-center">Couleur</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for integration_step in integration_steps %}
                            <tr>
                                <td class="align-middle">{{ integration_step.number }}</td>
                                <td class="align-middle">{{ integration_step.name }}</td>
                                <td class="align-middle">{{ integration_step.description }}</td>
                                <td class="text-center align-middle">{{ integration_step.duration }}</td>
                                <td class="text-center align-middle">
                                    <i class="{{ integration_step.fontAwesome }}"></i>
                                </td>
                                <td class="align-middle text-center">
                                    <div class="color-icon" style="background-color: {{ integration_step.color }};"></div>
                                </td>
                                <td class="text-center">
                                    <a class="text-decoration-none" href="{{ path('integration_step_show', {'id': integration_step.id}) }}">Voir</a>
                                    <a class="text-decoration-none" href="{{ path('integration_step_edit', {'id': integration_step.id}) }}">Modifier</a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="6">aucun enregistrement</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>

{% endblock %}
