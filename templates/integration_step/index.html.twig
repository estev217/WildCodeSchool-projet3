{% extends 'layout.html.twig' %}

{% block title %}IntegrationStep index{% endblock %}

{% block body %}
    <div class="container">
    <h1>L'index des étapes d'intégration</h1>

    <table class="table text-white">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Description</th>
                <th>Durée</th>
                <th>Icône FontAwesome</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for integration_step in integration_steps %}
            <tr>
                <td>{{ integration_step.id }}</td>
                <td>{{ integration_step.name }}</td>
                <td>{{ integration_step.description }}</td>
                <td>{{ integration_step.duration }}</td>
                <td>{{ integration_step.fontAwesome }}</td>
                <td>
                    <a href="{{ path('integration_step_show', {'id': integration_step.id}) }}">Voir</a>
                    <a href="{{ path('integration_step_edit', {'id': integration_step.id}) }}">Éditer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">aucun enregistrement</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('integration_step_new') }}">Créer</a>
    </div>
{% endblock %}
