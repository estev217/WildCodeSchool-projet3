{% extends 'layout.html.twig' %}

{% block title %}ChecklistItem index{% endblock %}

{% block body %}
    <h1>ChecklistItem index</h1>

    <table class="table text-white">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Category</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for checklist_item in checklist_items %}
            <tr>
                <td>{{ checklist_item.id }}</td>
                <td>{{ checklist_item.name }}</td>
                <td>{{ checklist_item.category }}</td>
                <td>
                    <a href="{{ path('checklist_item_show', {'id': checklist_item.id}) }}">show</a>
                    <a href="{{ path('checklist_item_edit', {'id': checklist_item.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('checklist_item_new') }}">Create new</a>
{% endblock %}
