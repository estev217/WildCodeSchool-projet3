{% extends 'layout.html.twig' %}

{% block title %}ChecklistItem index{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="card w-100 m-auto">
                    <div class="card-header text-center">
                        <h1>L'index des éléments Checklist</h1>
                    </div>
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Nom</th>
                                <th>Catégorie</th>
                                <th>actions</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for checklist_item in checklist_items %}
                            <tr>
                                <td>{{ checklist_item.name }}</td>
                                <td>{{ checklist_item.category }}</td>
                                <td>
                                    <a class="text-decoration-none" href="{{ path('checklist_item_show', {'id': checklist_item.id}) }}">Voir</a>
                                    <a class="text-decoration-none" href="{{ path('checklist_item_edit', {'id': checklist_item.id}) }}">Modifier</a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="4">aucun enregistrement</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                    <div class="col-md">
                        <a class="btn btn-primary mb-3" href="{{ path('checklist_item_new') }}">Créer</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
