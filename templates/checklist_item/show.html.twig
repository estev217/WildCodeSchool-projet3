{% extends 'layout.html.twig' %}

{% block title %}ChecklistItem{% endblock %}

{% block body %}
    <div class="container">
    <h1>Les élements de la Checklist</h1>

    <table class="table text-white">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ checklist_item.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ checklist_item.name }}</td>
            </tr>
            <tr>
                <th>Catégorie</th>
                <td>{{ checklist_item.category }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('checklist_item_index') }}">Retour à la liste</a>

    <a href="{{ path('checklist_item_edit', {'id': checklist_item.id}) }}">Éditer</a>

    {{ include('checklist_item/_delete_form.html.twig') }}
    </div>
{% endblock %}
