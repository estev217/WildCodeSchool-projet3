{% extends 'layout.html.twig' %}

{% block title %}ChecklistItem{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header text-center">
                        <h1>Les élements de la Checklist</h1>
                    </div>
                    <table class="table text-white">
                        <tbody>
                            <tr>
                                <th>Nom</th>
                                <td>{{ checklist_item.name }}</td>
                            </tr>
                            <tr>
                                <th>Catégorie</th>
                                <td>{{ checklist_item.category }}</td>
                            </tr>
                        </tbody>
                    </table>
                    <div class="d-flex align-items-end">
                        <button class="btn btn-primary mr-4 ml-4 mb-4">
                            <a class="text-white text-decoration-none" href="{{ path('checklist_item_edit', {'id': checklist_item.id}) }}">Modifier</a>
                        </button>
                        <div class="mb-4">
                        {{ include('checklist_item/_delete_form.html.twig') }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="d-flex justify-content-center mb-3">
            <button class="btn btn-primary">
                <a class="text-white text-decoration-none" href="{{ path('checklist_item_index') }}">Retour</a>
            </button>
        </div>
    </div>
{% endblock %}
