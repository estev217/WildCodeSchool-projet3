{% extends 'layout.html.twig' %}

{% block title %}Image{% endblock %}

{% block body %}
    <div class="container">
        <h1>Image</h1>

        <table class="table">
            <tbody>
            <tr>
                <th>Image</th>
                <td><img src="/upload/images/{{ image.imageName }}" alt="vignette" class="vignette"></td>
            </tr>
            <tr>
                <th>ImageName</th>
                <td>{{ image.imageName }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ image.createdAt ? image.createdAt|date('d/m/Y') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ image.updatedAt ? image.updatedAt|date('d/m/Y') : '' }}</td>
            </tr>
            </tbody>
        </table>

        <a href="{{ path('image_index') }}" class="btn btn-primary">Retour Ã  la liste</a>

        <a href="{{ path('image_edit', {'id': image.id}) }}">Modifier</a>

        {{ include('image/_delete_form.html.twig') }}
    </div>
{% endblock %}
