{% extends 'layout.html.twig' %}

{% block title %}Image{% endblock %}

{% block body %}
    <div class="container">
        <h1>Image</h1>

        <table class="table">
            <tbody>
            <tr>
                <th>Image</th>
                <td><img src="/upload/images/{{ image.imageName }}" alt="vignette" class="vignette"></td>
            </tr>
            <tr>
                <th>ULR de l'image</th>
                <td><input class="copy-text" type="text" id="text-box" size="50" value="/upload/images/{{ image.imageName }}"> <a title="Copier l'URL"> <i class="fas fa-copy copy-button ml-2"></i></a></td>
            </tr>
            <tr>
                <th>Ajoutée le</th>
                <td>{{ image.createdAt ? image.createdAt|date('d/m/Y') : '' }}</td>
            </tr>
            </tbody>
        </table>

        <a href="{{ path('image_index') }}" class="btn btn-primary mb-3">Retour à la liste</a>

        {{ include('image/_delete_form.html.twig') }}
    </div>
{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('app') }}
    {{ encore_entry_script_tags('copyURL') }}
{% endblock %}
