{% extends 'layout.html.twig' %}

{% block body %}
    <div class="container">
        <div class="page-header">
            <h1 id="timeline">Mon parcours d'intégration</h1>
        </div>
        <ul class="timeline">
        {% for step in steps %}
            <li class="{{ loop.index is odd ? "" : "timeline-inverted" }}">
                <div class="timeline-badge"><i class="{{ step.fontAwesome }}"></i></div>
                <div class="timeline-panel">
                    <div class="timeline-heading">
                        <h4 class="timeline-title">{{step.name}}</h4>
                        <p><small class="text-muted"><i class="glyphicon glyphicon-time"></i> Durée : {{ step.duration }} {{ step.duration > 1 ? 'jours' : 'jour' }}</small></p>
                    </div>
                    <div class="timeline-body">
                        <p>{{step.description|nl2br}}</p>
                    </div>
                </div>
            </li>
        {% endfor %}
        </ul>
    </div>
{% endblock %}
