{% extends 'layout.html.twig' %}

{% block title %}Catégorie{% endblock %}

{% block body %}

    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header text-center">
                        <h1>Catégorie</h1>

                        <table class="table">
                            <tbody>
                            <tr>
                                <th>Id</th>
                                <td>{{ category.id }}</td>
                            </tr>
                            <tr>
                                <th>Nom</th>
                                <td>{{ category.name }}</td>
                            </tr>
                            <tr>
                                <th>Identifier</th>
                                <td>{{ category.identifier }}</td>
                            </tr>
                            </tbody>
                        </table>

                        <a href="{{ path('category_index') }}">Retour</a>

                        <a href="{{ path('category_edit', {'id': category.id}) }}">Modifier</a>

                        {{ include('category/_delete_form.html.twig') }}
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
