<img src="{{ asset('build/images/header-sea2.png') }}" class="header-pic">
<div class="row head-block">
    <div class="col-lg-4 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="card-body d-flex align-items-center justify-content-around">

                <div>
                    <h4 class="card-title">Mes prochains rendez-vous</h4>
                    <div class="form-group">
                        {% if is_granted('ROLE_COLLABORATOR') %}
                            {% for appointment in app.user.appointments|sort((a, b) => a.date <=> b.date)|slice(0, 2) %}
                                <p>Le {{ appointment.date|date ("d/m/Y à h:i") }} avec
                                    <b>{{ appointment.partner.firstname }} {{ appointment.partner.lastname }} </b></p>
                            {% endfor %}
                        {% endif %}
                    </div>
                </div>

                <div class="icon">
                    <div class="icon-circle circle-rdv">
                        <i class="fas fa-calendar-alt"></i>
                    </div>
                </div>

            </div>
        </div>
    </div>
    {% if is_granted('ROLE_COLLABORATOR') %}
        <div class="col-lg-4 col-md-12 col-sm-12 col-xs-12">
            <div class="card">
                <div class="card-body d-flex align-items-center justify-content-around">
                    <div>
                        <h4 class="card-title">Mes contacts</h4>

                        <p><i class="fas fa-user-tie mr-3"></i> Manager :
                            <b>{{ app.user.manager.firstname }} {{ app.user.manager.lastname }}</b></p>
                        <p><i class="fas fa-user-cog mr-2"></i> Référent métier : <b>{{ app.user.referent }}</b></p>
                        <p><i class="fas fa-user-ninja mr-3"></i> Parrain : <b>{{ app.user.mentor }}</b></p>

                    </div>
                    <div class="icon">
                        <div class="icon-circle circle-contact">
                            <i class="fas fa-user-cog"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% endif %}
    <div class="col-lg-4 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="card-body d-flex align-items-center justify-content-around">
                <div>
                    <h4 class="card-title"><a href="{{ path('profile', {'user': app.user.id }) }}">Mon profil</a></h4>
                    <div class="info user-info">
                        <h4 class="my-name"><b>{{ app.user.firstname }} {{ app.user.lastname }}</b></h4>
                        {% if is_granted('ROLE_COLLABORATOR') %}
                            <h4>{{ app.user.position.name }}</h4>
                        {% endif %}
                    </div>
                </div>
                <div class="icon">
                    <div class="icon-circle circle-profile">
                        <i class="fas fa-user-circle"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


