<img src="{{ asset('build/images/header-sea4.png') }}" class="header-pic">
<div class="row head-block d-flex justify-content-around">
    <div class="card not-mobile">
        <div class="card-body d-flex justify-content-around">
            <div class="header-text text-center">
                <div>
                    <h4 class="card-title">Mes prochains rendez-vous</h4>
                </div>
                <div class="form-group">
                    {% if is_granted('ROLE_COLLABORATOR') %}
                        {% for appointment in app.user.appointments|sort((a, b) => a.date <=> b.date)|slice(0, 2) %}
                            <p>Le {{ appointment.date|date ("d/m/Y à h:i") }} avec
                                <b>{{ appointment.partner.firstname }} {{ appointment.partner.lastname }} </b></p>
                        {% endfor %}
                    {% endif %}
                </div>
            </div>
            <div class="icon align-self-center">
                <div class="icon-circle circle-rdv">
                    <i class="fas fa-calendar-alt fa-10x"></i>
                </div>
            </div>
        </div>
    </div>

    {% if is_granted('ROLE_COLLABORATOR') %}
        <div class="card desktop">
            <div class="card-body d-flex justify-content-around">
                <div class="header-text">
                    <div class="text-center">
                        <h4 class="card-title">Mes contacts</h4>
                    </div>

                    <div class="text-center">
                        <p><i class="fas fa-user-tie mr-2"></i> Manager :
                            <b>{{ app.user.manager.firstname }} {{ app.user.manager.lastname }}</b></p>
                        <p><i class="fas fa-user-cog mr-1"></i> Référent métier : <b>{{ app.user.referent }}</b></p>
                        <p><i class="fas fa-user-ninja mr-2"></i> Parrain : <b>{{ app.user.mentor }}</b></p>
                    </div>

                </div>
                <div class="icon align-self-center">
                    <div class="icon-circle circle-contact">
                        <i class="fas fa-user-cog"></i>
                    </div>
                </div>
            </div>
        </div>
    {% endif %}
    <div class="card not-mobile">
        <div class="card-body d-flex justify-content-around">
            <div class="header-text d-flex flex-column justify-content-center text-center">
                <div>
                    <h4 class="card-title"><a href="{{ path('profile', {'user': app.user.id }) }}">Mon profil</a></h4>
                </div>

                <div class="info user-info">
                    <h4 class="my-name"><b>{{ app.user.firstname }} {{ app.user.lastname }}</b></h4>
                    {% if is_granted('ROLE_COLLABORATOR') %}
                        <h4>{{ app.user.position.name }}</h4>
                    {% endif %}
                </div>
            </div>
            <div class="icon align-self-center">
                <div class="icon-circle circle-profile">
                    <i class="fas fa-user-circle"></i>
                </div>
            </div>
        </div>
    </div>
</div>
